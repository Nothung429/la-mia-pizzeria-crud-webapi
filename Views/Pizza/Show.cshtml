@{
    Layout = "_Layout";

    @model Pizza
}

<div class="container">
    <h1 class="text-center display-4">Welcome to Pizzeria Totò Sapore</h1>
    <table class="table table-dark table-striped table-hover mt-4">
        <thead>
            <tr>
                <th scope="col">Immagine</th>
                <th scope="col">Nome</th>
                <th scope="col">Prezzo</th>
                <th scope="col">Categoria</th>
                <th scope="col">Descrizione</th>
                <th scope="col">Ingredienti</th>
                <th scope="col">Azioni</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <img width="100" height="100" src="@Model.Image" class="rounded-circle">
                </td>
                <td>
                    <h3>@Model.Name</h3>
                </td>
                <td>
                    <h4>@Model.Price€</h4>
                </td>
                <td>
                    <h4 class="badge bg-success">@Model.Category.Name</h4>
                </td>
                <td>
                    <p>@Model.Description</p>
                </td>
                <td>
                    @foreach (Ingredient ingredient in Model.Ingredients)
                    {
                        <h4 class="badge bg-warning">@ingredient.Name</h4>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Index", "Pizza")" class="btn btn-outline-info">
                        Torna Indietro
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
